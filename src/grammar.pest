selector = _{ SOI ~ jsonPath ~ EOI }

jsonPath = ${ rootSelector ~ matcher* }
rootSelector = { "$" }

matcher = { dotChild }

dotChild = _{ wildcardedDotChild | namedDotChild }
wildcardedDotChild = { ".*" }
namedDotChild = ${ "." ~ childName }
childName = @{ char+ }
char = {
    !("\"" | "'" | "\\") ~ ANY
}

WHITESPACE = _{ " " }